.sign-page {
  padding: 0 32rpx;
  background-color: #f4f6f9;
  padding-bottom: 280rpx;
}
.sign-page .background {
  position: absolute;
  left: 0;
  width: 100%;
  height: 1334rpx;
}
.sign-page .background-placeholder {
  width: 100%;
  height: 1148rpx;
}
.sign-page .contract-list {
  position: relative;
  padding: 0 0 32rpx 0;
}
.sign-page .contract-list::after {
  content: "";
  position: absolute;
  left: -32rpx;
  right: -32rpx;
  bottom: -10rpx;
  height: 234rpx;
  background: linear-gradient(180deg, rgba(244, 246, 249, 0) 0%, #f4f6f9 100%);
}
.sign-page .contract-item {
  position: relative;
  width: 330rpx;
  height: 176rpx;
  padding: 34rpx 54rpx;
  box-shadow: 0 0 0 2rpx #cfcfcf inset;
  border-radius: 24rpx;
  background-color: #ffffff;
  z-index: 1;
}
.sign-page .contract-item.active {
  box-shadow: 0 0 0 4rpx #30a375 inset;
  background-color: #E3FFEE;
}
.sign-page .contract-item.active::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  box-shadow: 0rpx 4rpx 20rpx 0rpx #4ef08c1a;
}
.sign-page .badge {
  position: absolute;
  top: -10rpx;
  right: 0;
}
.sign-page .badge-background {
  position: absolute;
  right: 0;
  width: 148rpx;
  height: 40rpx;
}
.sign-page .badge-text {
  position: relative;
  width: 128rpx;
  margin-top: 2rpx;
  text-align: center;
}
.sign-page .text.contract-price {
  line-height: 68rpx;
}
.sign-page .old-price {
  text-decoration: line-through;
}
.sign-page .detail-container {
  position: relative;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
}
.sign-page .contract-description {
  padding: 24rpx 24rpx 32rpx 24rpx;
  background: linear-gradient(180deg, #dffaea 0%, #ffffff 100%);
  box-shadow: 0 0 0 2rpx #E3FFEE inset;
  border-radius: 24rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #555557;
}
.sign-page .tabbar-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 172rpx;
  background-color: #fff;
  padding: 16rpx 32rpx env(safe-area-inset-bottom) 32rpx;
}
.sign-page .buy-btn {
  flex: 1;
  height: 88rpx;
  background-color: #30a375;
  border-radius: 44rpx;
}
