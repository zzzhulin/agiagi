.diet-survey-family-page {
  min-height: 100vh;
  background-color: #fff;
}
.diet-survey-family-page .survey-banner {
  width: 600rpx;
  height: 600rpx;
  margin: 48rpx auto 66rpx auto;
}
.diet-survey-family-page .line {
  width: 120rpx;
  height: 2rpx;
  background-color: #88888a;
}
.diet-survey-family-page .family-list {
  display: flex;
  width: auto;
  height: 264rpx;
  padding: 0 32rpx;
}
.diet-survey-family-page .family-item {
  flex: none;
  width: 212rpx;
  height: 264rpx;
  margin-right: 24rpx;
  background-color: #F9F9F9;
  border-radius: 24rpx;
}
.diet-survey-family-page .family-item:last-child {
  margin-right: 0;
}
.diet-survey-family-page .family-item.active {
  box-shadow: 0 0 0 4rpx #30a375 inset;
}
.diet-survey-family-page .tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 32rpx env(safe-area-inset-bottom) 32rpx;
  background-color: #fff;
}
.diet-survey-family-page .survey-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
.diet-survey-family-page .popup-content {
  width: 588rpx;
  border-radius: 32rpx;
  padding: 40rpx;
  background-color: #fff;
}
.diet-survey-family-page .cancel-btn,
.diet-survey-family-page .confirm-btn {
  width: 240rpx;
  height: 88rpx;
  border-radius: 44rpx;
}
.diet-survey-family-page .cancel-btn {
  background-color: #f4f6f9;
}
.diet-survey-family-page .confirm-btn {
  background-color: #30a375;
}
