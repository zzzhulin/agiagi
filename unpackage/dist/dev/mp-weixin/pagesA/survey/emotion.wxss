.survey-emotion-page {
  min-height: 100vh;
  padding: 0 32rpx 516rpx 32rpx;
  background-color: #fff;
}
.survey-emotion-page .banner-container {
  position: relative;
  background-color: #F9F9F9;
  border-radius: 24rpx;
  padding-left: 22rpx;
  height: 242rpx;
}
.survey-emotion-page .banner-image {
  position: absolute;
  right: 20rpx;
  bottom: 0;
}
.survey-emotion-page .question-content {
  width: -webkit-fit-content;
  width: fit-content;
  padding: 24rpx;
  border-radius: 24rpx;
  background-color: #F9F9F9;
}
.survey-emotion-page .answer-content {
  width: -webkit-fit-content;
  width: fit-content;
  padding: 16rpx 24rpx;
  margin-left: auto;
  border-radius: 16rpx;
  background-color: #4ef08c;
}
.survey-emotion-page .analysis-container {
  position: fixed;
  bottom: env(safe-area-inset-bottom);
  width: 686rpx;
  height: 240rpx;
  padding: 32rpx;
  margin: 0 auto;
  border-radius: 24rpx;
  background-color: #F9F9F9;
  box-shadow: 0 0 0 2rpx #88888a inset;
  z-index: 9999;
}
.survey-emotion-page .analysis-btn {
  width: 432rpx;
  height: 72rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
.survey-emotion-page .tabbar-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 32rpx env(safe-area-inset-bottom) 32rpx;
  background-color: #f4f6f9;
}
.survey-emotion-page .tabbar-content {
  width: 100%;
  padding: 22rpx 32rpx;
  border-radius: 48rpx;
  box-shadow: 0rpx 4rpx 20rpx 0rpx #0000001a;
  background-color: #fff;
}
.survey-emotion-page .tabbar-content.editing {
  padding: 0 24rpx 24rpx 24rpx;
  border-radius: 24rpx;
}
.survey-emotion-page .answer-input {
  flex: 1;
  min-height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
}
.survey-emotion-page .old-answer {
  height: 80rpx;
  border-bottom: 2rpx solid #e0e6f1;
}
.survey-emotion-page checkbox-group,
.survey-emotion-page radio-group {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.survey-emotion-page label {
  display: flex;
  align-items: center;
}
.survey-emotion-page .popup-content {
  position: absolute;
  right: 34rpx;
  width: 200rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 16rpx;
}
.survey-emotion-page .popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.1);
}
.survey-emotion-page .survey-message {
  width: 510rpx;
  background-color: #F9F9F9;
  border-radius: 16rpx;
  padding: 16rpx 24rpx 0 24rpx;
}
.survey-emotion-page .survey-description {
  flex: 1;
}
.survey-emotion-page .survey-description .text {
  display: inline;
}
.survey-emotion-page .survey-cover {
  width: 120rpx;
  height: 120rpx;
  background-color: #fff;
}
.survey-emotion-page .survey-type {
  width: 100%;
  height: 64rpx;
  border-top: 2rpx solid #e2e2e2;
}
.survey-emotion-page .speech-btn {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #30a375;
}
