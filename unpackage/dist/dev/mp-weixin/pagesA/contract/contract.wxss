.contract-page {
  padding: 0 32rpx 164rpx 32rpx;
}
.contract-page .background {
  position: absolute;
  left: 0;
  right: 0;
  height: 562rpx;
  padding-top: 350rpx;
  background-color: #30a375;
}
.contract-page .background::after {
  position: absolute;
  content: "";
  width: 100%;
  height: 212rpx;
  background: linear-gradient(180deg, #30a375 0%, #ffffff 100%);
}
.contract-page .contract-container {
  padding-top: 224rpx;
}
.contract-page .contract-content {
  position: relative;
  box-shadow: 0rpx 16rpx 32rpx 0rpx #0000000d;
  border-radius: 48rpx;
  overflow: hidden;
}
.contract-page .contract-content:before {
  content: "";
  position: absolute;
  width: 100%;
  height: 146rpx;
  background: linear-gradient(180deg, #ffffff 0%, #c9ffde 100%);
}
.contract-page .empty-content {
  position: relative;
  width: 100%;
  height: 704rpx;
  border-radius: 24rpx;
  background-color: #fff;
  box-shadow: 0rpx 16rpx 32rpx 0rpx #0000000d;
}
.contract-page .officer-list {
  position: relative;
  padding: 0 40rpx 0 24rpx;
  height: 98rpx;
}
.contract-page .officer-detail {
  position: relative;
  padding: 32rpx 24rpx 24rpx 24rpx;
  background-color: #fff;
  border-radius: 48rpx;
}
.contract-page .officer-detail .points {
  width: 200rpx;
  height: 200rpx;
  background-color: #f4f6f9;
  border-radius: 50%;
}
.contract-page .officer-detail .text.points-text {
  line-height: 68rpx;
}
.contract-page .date-info {
  height: 240rpx;
  padding: 8rpx 24rpx 22rpx 24rpx;
  background: linear-gradient(180deg, #7dffaf 0%, #4ef08c 100%);
  border-radius: 24rpx;
}
.contract-page .date-count::after {
  display: inline-block;
  vertical-align: super;
  content: "天";
  margin-left: 4rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #111112;
  font-weight: 600;
}
.contract-page .expire-date {
  display: flex;
  align-items: center;
  gap: 10rpx;
  opacity: 0.6;
}
.contract-page .expire-date:before {
  content: "";
  height: 2rpx;
  width: 112rpx;
  background-color: #111112;
  opacity: 0.3;
}
.contract-page .renew-btn {
  width: 360rpx;
  height: 72rpx;
  background-color: #111112;
  border-radius: 44rpx;
  margin: 0 auto;
}
.contract-page .contract-item:not(.popup-contract-item) {
  position: relative;
  padding: 30rpx 24rpx 24rpx 32rpx;
  height: 256rpx;
  box-shadow: 0 0 0 2rpx #e0e6f1;
  border-radius: 24rpx;
  background: linear-gradient(143.18deg, #e3ffee 6.48%, #ffffff 55.6%);
}
.contract-page .contract-item:not(.popup-contract-item) .points {
  position: absolute;
  top: 36rpx;
  right: 24rpx;
}
.contract-page .line {
  width: 2rpx;
  height: 24rpx;
  background-color: #cfcfcf;
}
.contract-page .present-btn,
.contract-page .activate-btn {
  width: 120rpx;
  height: 56rpx;
  border-radius: 28rpx;
}
.contract-page .present-btn {
  box-shadow: 0 0 0 2rpx #88888a;
}
.contract-page .activate-btn {
  background-color: #4ef08c;
}
.contract-page .service-cover {
  flex: none;
  border-radius: 16rpx;
}
.contract-page .service-content {
  flex: 1;
  height: 204rpx;
}
.contract-page .service-content .full-width {
  margin-top: auto;
}
.contract-page .buy-btn {
  width: 120rpx;
  height: 56rpx;
  border-radius: 28rpx;
  box-shadow: 0 0 0 2rpx #88888a;
}
.contract-page .ellipsis {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  /* 限制为两行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.renew-popup,
.point-popup {
  padding: 0 32rpx;
}
.renew-popup .popup-content,
.point-popup .popup-content {
  flex: 1;
}
.renew-popup .close-btn,
.point-popup .close-btn {
  height: 88rpx;
  align-items: center;
  justify-content: flex-end;
}
.renew-popup .contract-item,
.point-popup .contract-item {
  position: relative;
  width: 330rpx;
  height: 176rpx;
  padding: 34rpx 54rpx;
  box-shadow: 0 0 0 2rpx #cfcfcf inset;
  border-radius: 24rpx;
  background-color: #ffffff;
  z-index: 1;
}
.renew-popup .contract-item.active,
.point-popup .contract-item.active {
  box-shadow: 0 0 0 4rpx #30a375 inset;
  background-color: #E3FFEE;
}
.renew-popup .contract-item.active::after,
.point-popup .contract-item.active::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  box-shadow: 0rpx 4rpx 20rpx 0rpx #4ef08c1a;
}
.renew-popup .badge,
.point-popup .badge {
  position: absolute;
  top: -10rpx;
  right: 0;
}
.renew-popup .badge-background,
.point-popup .badge-background {
  position: absolute;
  right: 0;
  width: 148rpx;
  height: 40rpx;
}
.renew-popup .badge-text,
.point-popup .badge-text {
  position: relative;
  width: 128rpx;
  margin-top: 2rpx;
  text-align: center;
}
.renew-popup .text.contract-price,
.point-popup .text.contract-price {
  line-height: 68rpx;
}
.renew-popup .old-price,
.point-popup .old-price {
  text-decoration: line-through;
}
.renew-popup .point-list,
.point-popup .point-list {
  flex-wrap: wrap;
  row-gap: 26rpx;
}
.renew-popup .point-item,
.point-popup .point-item {
  width: 330rpx;
  height: 160rpx;
  padding: 24rpx 32rpx;
  border-radius: 24rpx;
  background-color: #F9F9F9;
  box-shadow: 0 0 0 2rpx #e0e6f1 inset;
}
.renew-popup .point-item.active,
.point-popup .point-item.active {
  box-shadow: 0 0 0 4rpx #30a375 inset;
  background-color: #E3FFEE;
}
.renew-popup .tabbar-container,
.point-popup .tabbar-container {
  height: 104rpx;
  background-color: #fff;
  padding: 16rpx 32rpx 0 32rpx;
}
.renew-popup .buy-btn,
.point-popup .buy-btn {
  flex: 1;
  height: 88rpx;
  background-color: #30a375;
  border-radius: 44rpx;
}
.activate-popup {
  width: 588rpx;
  border-radius: 32rpx;
  padding: 40rpx;
  background-color: #fff;
}
.activate-popup .cancel-btn,
.activate-popup .confirm-btn {
  width: 240rpx;
  height: 88rpx;
  border-radius: 44rpx;
}
.activate-popup .cancel-btn {
  background-color: #f4f6f9;
}
.activate-popup .confirm-btn {
  background-color: #30a375;
}
