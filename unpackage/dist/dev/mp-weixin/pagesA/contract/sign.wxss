.sign-up {
  width: 100%;
  height: 100vh;
}
.sign-up .sign-up-body {
  position: relative;
  height: calc(100vh - 244rpx);
}
.sign-up .logo-content {
  position: absolute;
  top: 96rpx;
  left: 24rpx;
  z-index: 9;
}
.sign-up .banner-swipper {
  height: 100%;
}
.sign-up .banner-image {
  display: block;
  width: 100%;
  height: 100%;
}
.sign-up .recruit-btn {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 48rpx;
  width: 480rpx;
  height: 88rpx;
  margin: auto;
  border-radius: 44rpx;
  background-color: #ff8b39;
  box-shadow: 0rpx 8rpx 20rpx 0rpx #f77f364d;
}
.sign-up .btn-badge {
  position: absolute;
  top: -10rpx;
  right: 0;
}
.sign-up .btn-badge-text {
  position: relative;
  width: 176rpx;
  margin-top: 2rpx;
  text-align: center;
}
.sign-up .btn-badge-background {
  position: absolute;
  right: 0;
  width: 196rpx;
  height: 40rpx;
}
.sign-up .auth-btn {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  z-index: 9999;
}
.sign-up .save-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
.user-popup {
  width: 600rpx;
  padding: 40rpx;
  border-radius: 32rpx;
  background-color: #fff;
}
.user-popup .avatar-btn {
  width: 120rpx;
  height: 120rpx;
  padding: 0;
  border-radius: 50%;
  background-color: transparent;
}
.user-popup .nickname-input {
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e0e6f1;
}
