.blessing-page {
  height: 100vh;
  padding: 32rpx 32rpx 172rpx 32rpx;
  background-color: #F9F9F9;
}
.blessing-page .textarea {
  width: 100%;
  padding: 24rpx;
  box-shadow: 0 0 0 2rpx #e0e6f1 inset;
  border-radius: 16rpx;
  background-color: #ffffff;
}
.blessing-page .upload-btn {
  width: 200rpx;
  height: 200rpx;
  box-shadow: 0 0 0 2rpx #e0e6f1 inset;
  border-radius: 16rpx;
  background-color: #fff;
}
.blessing-page .icon-plus {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}
.blessing-page .icon-plus::before,
.blessing-page .icon-plus::after {
  content: "";
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  background-color: #88888a;
  border-radius: 8rpx;
}
.blessing-page .icon-plus::before {
  width: 4rpx;
  height: 40rpx;
}
.blessing-page .icon-plus::after {
  width: 40rpx;
  height: 4rpx;
}
.blessing-page .tabbar-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 172rpx;
  background-color: #fff;
  padding: 16rpx 32rpx env(safe-area-inset-bottom) 32rpx;
}
.blessing-page .present-btn {
  flex: 1;
  height: 88rpx;
  background-color: #30a375;
  border-radius: 44rpx;
}
.blessing-page .share-btn {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}
