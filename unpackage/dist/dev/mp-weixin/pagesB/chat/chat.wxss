.chat-page {
  height: 100vh;
  background-color: #f4f6f9;
}
.chat-page .chat-title {
  margin-left: 100rpx;
}
.chat-page .chat-icon {
  width: 64rpx;
  height: 64rpx;
}
.chat-page .strategy-container {
  flex: none;
  height: 80rpx;
  padding: 0 32rpx;
  border-bottom: 2rpx solid #e2e2e2;
}
.chat-page .strategy-icon {
  width: 40rpx;
  height: 40rpx;
}
.chat-page .message-container {
  width: auto;
  padding: 32rpx 24rpx 0 24rpx;
  overflow: auto;
}
.chat-page .message-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.chat-page .message-item:last-child {
  margin-bottom: 24rpx;
}
.chat-page .message-time {
  margin: 8rpx 0 20rpx 0;
  text-align: center;
}
.chat-page .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.chat-page .message-dialog {
  max-width: 510rpx;
  margin: auto;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  background-color: #4ef08c;
}
.chat-page .message-dialog.friend {
  background-color: #fff;
}
.chat-page .message-content {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #111112;
  white-space: pre-line;
  word-break: break-all;
  text-align: justify;
}
.chat-page .message-content.loading {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.chat-page .message-content.loading:before {
  flex: none;
  display: block;
  content: "";
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 4rpx solid #e2e2e2;
  border-top: 4rpx solid #555557;
  -webkit-animation: spin 1s linear infinite;
          animation: spin 1s linear infinite;
  box-sizing: border-box;
}
.chat-page .message-content.loading::after {
  content: "阿济正在努力思考中，可能需要几分钟";
  font-size: 32rpx;
  color: #111112;
  line-height: 44rpx;
}
.chat-page .message-content text {
  display: none;
}
@-webkit-keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
.chat-page .message-image {
  width: 240rpx;
  border-radius: 16rpx;
}
.chat-page .message-video {
  width: 510rpx;
  height: 284rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.chat-page .survey-message {
  width: 510rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx 24rpx 0 24rpx;
}
.chat-page .survey-description {
  flex: 1;
}
.chat-page .survey-description .text {
  display: inline;
}
.chat-page .survey-cover {
  width: 120rpx;
  height: 120rpx;
  background-color: #F9F9F9;
}
.chat-page .survey-type {
  width: 100%;
  height: 64rpx;
  border-top: 2rpx solid #e2e2e2;
}
.chat-page .message-voice {
  padding-left: 60rpx;
}
.chat-page .message-voice .icon {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
