.health-page {
  height: 100vh;
  padding: 0 32rpx env(safe-area-inset-bottom) 32rpx;
  background-color: #f4f6f9;
}
.health-page .background {
  position: absolute;
  left: 0;
}
.health-page .officer-list {
  position: relative;
  padding-top: 376rpx;
  padding-bottom: 16rpx;
}
.health-page .current-officer {
  width: 88rpx;
  height: 88rpx;
  box-shadow: 0 0 0 4rpx #30a375 inset;
  border-radius: 50%;
  background-color: #ffffff;
}
.health-page .current-officer .icon-image {
  width: 72rpx;
  height: 72rpx;
}
.health-page .health-container {
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  background-color: #ffffff;
}
.health-page .health-list:before {
  content: "";
  width: 100%;
  height: 2rpx;
  background-color: #e2e2e2;
}
.health-page .health-cover {
  position: relative;
  width: 210rpx;
  height: 210rpx;
  border-radius: 16rpx;
}
.health-page .play-btn {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 88rpx;
  height: 88rpx;
}
