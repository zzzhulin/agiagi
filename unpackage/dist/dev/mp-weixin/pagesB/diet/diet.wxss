.diet-page {
  min-height: 100vh;
  padding: 0 32rpx 190rpx 32rpx;
  background-color: #f4f6f9;
}
.diet-page .background {
  position: absolute;
  left: 0;
}
.diet-page .family-list {
  position: relative;
  padding-top: 376rpx;
  padding-bottom: 16rpx;
}
.diet-page .family-item.active {
  width: 88rpx;
  height: 88rpx;
  box-shadow: 0 0 0 4rpx #30a375 inset;
  border-radius: 50%;
  background-color: #ffffff;
}
.diet-page .diet-container {
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  background-color: #ffffff;
}
.diet-page .line {
  width: 2rpx;
  height: 20rpx;
  background-color: #cfcfcf;
}
.diet-page .chart-content {
  position: relative;
  width: 638rpx;
  height: 680rpx;
  border-radius: 24rpx;
  background-color: #F9F9F9;
  overflow: hidden;
}
.diet-page .chart-content .icon {
  position: absolute;
}
.diet-page .pie-legend {
  position: absolute;
  top: 204rpx;
  left: 360rpx;
  z-index: 9999;
}
.diet-page .pie-legend .dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}
.diet-page .pie-legend .primary-dot {
  background-color: #30a375;
}
.diet-page .pie-legend .accent-dot {
  background-color: #4ef08c;
}
.diet-page .pie-legend .warning-dot {
  background-color: #ff8b39;
}
.diet-page .chart-tab,
.diet-page .chart-title {
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 9999;
}
.diet-page .chart-tab {
  top: 40rpx;
}
.diet-page .chart-title {
  bottom: 20rpx;
  text-align: center;
  opacity: 0.8;
}
.diet-page .scheme-point-content,
.diet-page .plan-content,
.diet-page .empty-content {
  position: relative;
  padding-top: 48rpx;
}
.diet-page .scheme-point-content:before,
.diet-page .plan-content:before,
.diet-page .empty-content:before {
  position: absolute;
  top: 0;
  content: "";
  width: 100%;
  height: 2rpx;
  background-color: #e2e2e2;
}
.diet-page .empty-content {
  padding-bottom: 96rpx;
}
.diet-page .recommend-title {
  width: 128rpx;
  height: 48rpx;
  background-color: #111112;
}
.diet-page .scheme-name.text {
  line-height: 68rpx;
}
.diet-page .cookbook-content {
  position: relative;
  padding-top: 40rpx;
  border-top: 2rpx dashed #88888a;
}
.diet-page .food-list {
  row-gap: 16rpx;
  -webkit-column-gap: 16rpx;
          column-gap: 16rpx;
  flex-wrap: wrap;
}
.diet-page .food-item {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background-color: #E3FFEE;
}
.diet-page .advice-container {
  margin-top: 32rpx;
}
.diet-page .advice-content {
  padding: 32rpx 24rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
}
.diet-page .advice-item {
  line-height: 1;
}
.diet-page .advice-item .text {
  display: inline;
}
.diet-page .scheme-btn {
  width: 200rpx;
  height: 72rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
.diet-page .cookbook-btn {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  bottom: 68rpx;
  width: 686rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
