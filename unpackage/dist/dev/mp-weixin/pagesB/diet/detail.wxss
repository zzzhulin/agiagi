.diet-detail-page {
  padding-bottom: 162rpx;
}
.diet-detail-page .video-container {
  position: relative;
  height: 422rpx;
}
.diet-detail-page .video-container video {
  width: 100%;
  height: 100%;
}
.diet-detail-page .play-btn {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 88rpx;
  height: 88rpx;
  z-index: 99;
}
.diet-detail-page .diet-detail-container {
  position: relative;
  margin: 60rpx 32rpx 0 32rpx;
  padding-bottom: 48rpx;
}
.diet-detail-page .diet-detail-container::after {
  content: "";
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 2rpx;
  background-color: #e2e2e2;
}
.diet-detail-page .diet-cover {
  border-radius: 16rpx;
}
.diet-detail-page .other-method-container {
  margin: 48rpx 32rpx 0 32rpx;
}
