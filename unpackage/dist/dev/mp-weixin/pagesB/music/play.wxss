.music-play-page .music-content {
  width: 600rpx;
  height: 600rpx;
  box-shadow: 0 0 0 2rpx #e0e6f1 inset;
  border-radius: 50%;
}
.music-play-page .music-cover {
  position: relative;
  width: 520rpx;
  height: 520rpx;
  border-radius: 50%;
  -webkit-animation: rotate 8s linear infinite;
          animation: rotate 8s linear infinite;
  -webkit-animation-play-state: paused;
          animation-play-state: paused;
}
.music-play-page .cover {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}
.music-play-page .music-center {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  box-shadow: 0 0 0 16rpx #111112 inset;
  background-color: #ffffff;
  border-radius: 50%;
}
.music-play-page .pause-btn,
.music-play-page .play-btn {
  margin-top: 132rpx;
}
.music-play-page .picker {
  display: flex;
  align-items: center;
}
@-webkit-keyframes rotate {
from {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
to {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes rotate {
from {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
to {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
