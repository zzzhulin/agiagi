.music-page {
  min-height: 100vh;
  padding: 0 32rpx 134rpx 32rpx;
  background-color: #f4f6f9;
}
.music-page .background {
  position: absolute;
  left: 0;
}
.music-page .family-list {
  position: relative;
  padding-top: 376rpx;
  padding-bottom: 16rpx;
}
.music-page .family-item.active {
  width: 88rpx;
  height: 88rpx;
  box-shadow: 0 0 0 4rpx #30a375 inset;
  border-radius: 50%;
  background-color: #ffffff;
}
.music-page .music-container {
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  background-color: #ffffff;
}
.music-page .music-list:before {
  content: "";
  width: 100%;
  height: 2rpx;
  margin-bottom: 24rpx;
  background-color: #e2e2e2;
}
.music-page .music-item {
  background-color: #F9F9F9;
  border-radius: 16rpx;
  padding: 30rpx 24rpx;
}
.music-page .change-btn {
  width: 330rpx;
  height: 64rpx;
  border-radius: 44rpx;
  box-shadow: 0 0 0 2rpx #88888a inset;
  margin: auto;
}
.music-page .play-btn {
  flex: none;
}
