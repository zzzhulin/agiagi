.cookbook-detail {
  padding: 32rpx 30rpx 206rpx 32rpx;
}
.cookbook-detail .family-list {
  position: relative;
}
.cookbook-detail .family-item.active {
  width: 88rpx;
  height: 88rpx;
  box-shadow: 0 0 0 4rpx #30a375 inset;
  border-radius: 50%;
  background-color: #ffffff;
}
.cookbook-detail .nutrition-btn {
  position: absolute;
  top: 338rpx;
  right: 32rpx;
}
.cookbook-detail .table {
  border: 2rpx solid #e0e6f1;
  border-radius: 8rpx;
}
.cookbook-detail .table .tr {
  border-bottom: 2rpx solid #e0e6f1;
}
.cookbook-detail .table .tr:last-child {
  border-bottom: none;
}
.cookbook-detail .table .td {
  width: 526rpx;
  padding: 16rpx 24rpx;
  border-left: 2rpx solid #e0e6f1;
}
.cookbook-detail .table .td:first-child {
  width: 162rpx;
  border-left: none;
}
.cookbook-detail .table .meal-text.text {
  white-space: break-spaces;
  line-height: 44rpx;
}
.cookbook-detail .empty-content {
  margin-top: 200rpx;
}
