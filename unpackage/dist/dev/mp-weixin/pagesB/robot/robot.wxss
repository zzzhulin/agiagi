.robot-page {
  height: 100vh;
  background-color: #f4f6f9;
}
.robot-page .user-container {
  position: fixed;
  left: 0;
  right: 0;
  height: 128rpx;
  padding: 24rpx 32rpx 16rpx 32rpx;
  background-color: #ffffff;
  border-radius: 0 0 32rpx 32rpx;
  z-index: 99;
}
.robot-page .friend-item {
  position: relative;
  width: 88rpx;
  height: 88rpx;
}
.robot-page .message-count {
  position: absolute;
  top: 0;
  right: 0;
  padding: 0 8rpx;
  min-width: 32rpx;
  height: 28rpx;
  background-color: #ff4f4f;
  border-radius: 20rpx;
}
.robot-page .robot-content {
  padding: 8rpx 24rpx 8rpx 8rpx;
  box-shadow: 0 0 0 3rpx #30a375 inset;
  border-radius: 40rpx;
  background-color: #E3FFEE;
}
.robot-page .robot-title {
  margin-left: 100rpx;
}
.robot-page .message-container {
  width: auto;
  padding: 0 32rpx;
  overflow: auto;
  overflow-anchor: none;
}
.robot-page .message-list {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  padding: 40rpx 0;
}
.robot-page .message-item {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  width: -webkit-fit-content;
  width: fit-content;
  padding: 16rpx 24rpx;
  margin-left: auto;
  border-radius: 16rpx;
  background-color: #4ef08c;
}
.robot-page .message-item.robot:not(.test) {
  width: auto;
  margin: 0;
  min-height: 92rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  background-color: #ffffff;
}
.robot-page .message-item.test {
  padding: 0;
  background: none;
}
.robot-page .message-item.test .test-result {
  padding: 24rpx;
  border-radius: 24rpx;
  background-color: #ffffff;
}
.robot-page .message-item.test .survey-message {
  width: 510rpx;
  padding: 16rpx 24rpx 0 24rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
}
.robot-page .message-item.test .survey-description .text {
  display: inline;
}
.robot-page .message-item.test .survey-cover {
  width: 120rpx;
  height: 120rpx;
  background-color: #F9F9F9;
  flex: none;
  margin-left: auto;
}
.robot-page .message-item.test .survey-type {
  height: 64rpx;
  border-top: 2rpx solid #e2e2e2;
}
.robot-page .message-content {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #111112;
  white-space: pre-line;
  word-break: break-all;
  text-align: justify;
}
.robot-page .message-actions {
  height: 96rpx;
  padding: 0 28rpx 0 12rpx;
  border-top: 2rpx solid #e2e2e2;
}
.robot-page .message-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  border-radius: 18rpx;
  background-color: #f4f6f9;
}
.robot-page .message-icon {
  width: 40rpx;
  height: 40rpx;
}
.robot-page .message-content.loading {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.robot-page .message-content.loading:before {
  display: block;
  content: "";
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 4rpx solid #e2e2e2;
  border-top: 4rpx solid #555557;
  -webkit-animation: spin 1s linear infinite;
          animation: spin 1s linear infinite;
  box-sizing: border-box;
}
.robot-page .message-content.loading::after {
  content: "阿济正在努力思考中，可能需要几分钟";
  font-size: 32rpx;
  color: #111112;
  line-height: 44rpx;
}
.robot-page .message-content text {
  display: none;
}
@-webkit-keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
