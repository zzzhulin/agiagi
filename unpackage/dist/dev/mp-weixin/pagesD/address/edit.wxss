.address-edit-page {
  padding: 32rpx 32rpx 0 32rpx;
}
.address-edit-page .address-action {
  margin-top: 58rpx;
}
.address-edit-page .form-label {
  width: 112rpx;
}
.address-edit-page .form-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  border-radius: 16rpx;
  background-color: #F9F9F9;
  overflow: hidden;
}
.address-edit-page .form-input input,
.address-edit-page .form-input picker,
.address-edit-page .uni-input {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}
.address-edit-page .tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 12rpx 32rpx 80rpx 32rpx;
  background-color: #fff;
}
.address-edit-page .add-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
.address-edit-page .selected-area.placeholder {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #88888a;
}
.address-edit-page .input-value.input-value-border {
  border: none;
  padding: 0;
  height: 40rpx;
}
.address-edit-page .arrow-area {
  display: none;
}
.address-edit-page .text-color,
.address-edit-page .item-text,
.address-edit-page .selected-item {
  color: #111112;
}
.address-edit-page .selected-item-active,
.address-edit-page .check {
  border-color: #30a375;
}
.address-edit-page .input-split-line,
.address-edit-page .icon-clear {
  display: none;
}
