.address-page {
  min-height: 100vh;
  padding: 0 32rpx 212rpx 32rpx;
  background-color: #f4f6f9;
}
.address-page .address-item {
  padding: 24rpx;
  border-radius: 24rpx;
  background-color: #fff;
}
.address-page .default-tag {
  width: 64rpx;
  height: 36rpx;
  border-radius: 8rpx;
  background-color: #30a375;
}
.address-page .tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 12rpx 32rpx 80rpx 32rpx;
  background-color: #f4f6f9;
}
.address-page .add-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
