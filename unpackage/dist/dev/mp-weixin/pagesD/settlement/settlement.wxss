.settlement-page {
  padding: 0 32rpx;
  min-height: 100vh;
  background-color: #f4f6f9;
}
.settlement-page .address-container {
  padding: 32rpx;
  border-radius: 24rpx;
  background-color: #fff;
}
.settlement-page .address-container.empty {
  padding: 24rpx 32rpx;
}
.settlement-page .product-container {
  padding: 24rpx;
  border-radius: 24rpx;
  background-color: #fff;
}
.settlement-page .product-content {
  flex: 1;
  height: 176rpx;
}
.settlement-page .product-cover {
  flex: none;
  border-radius: 8rpx;
}
.settlement-page .product-info {
  margin-right: auto;
}
.settlement-page .message-input {
  min-height: auto;
  line-height: 1;
  height: 72rpx;
  padding: 0 16rpx;
  border-radius: 16rpx;
  background-color: #F9F9F9;
  overflow: hidden;
}
.settlement-page .input-placeholder {
  color: #88888a;
}
.settlement-page .settlement-container {
  padding: 8rpx 24rpx;
  background-color: #fff;
  border-radius: 24rpx;
}
.settlement-page .settlement-item {
  height: 88rpx;
}
.settlement-page .tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 12rpx 32rpx 80rpx 32rpx;
}
.settlement-page .pay-btn {
  width: 240rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
