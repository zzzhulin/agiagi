.refund-page {
  min-height: 100vh;
  background-color: #f4f6f9;
  padding: 32rpx 32rpx 168rpx 32rpx;
}
.refund-page .product-container,
.refund-page .refund-container {
  padding: 24rpx;
  border-radius: 24rpx;
  background-color: #fff;
}
.refund-page .product-cover {
  flex: none;
  border-radius: 8rpx;
}
.refund-page .product-content {
  width: calc(100% - 176rpx - 24rpx);
}
.refund-page .product-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.refund-page picker {
  flex: 1;
  padding: 20rpx;
  border-radius: 16rpx;
  background-color: #F9F9F9;
}
.refund-page .form-input {
  flex: 1;
  min-height: auto;
  height: auto;
  font-size: 28rpx;
  line-height: 40rpx;
}
.refund-page .form-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  background-color: #F9F9F9;
}
.refund-page .tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 12rpx 32rpx env(safe-area-inset-bottom) 32rpx;
  background-color: #f4f6f9;
}
.refund-page .apply-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
