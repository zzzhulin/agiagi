.refund-list-page {
  min-height: 100vh;
  background-color: #f4f6f9;
}
.refund-list-page .order-container {
  padding: 32rpx 32rpx env(safe-area-inset-bottom) 32rpx;
}
.refund-list-page .order-item {
  padding: 24rpx;
  border-radius: 16rpx;
  background-color: #fff;
}
.refund-list-page .product-cover {
  flex: none;
  border-radius: 8rpx;
}
.refund-list-page .product-content {
  width: calc(100% - 176rpx - 24rpx);
}
.refund-list-page .product-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.refund-list-page .order-price {
  margin-left: auto;
}
.refund-list-page .order-btn {
  width: 156rpx;
  height: 64rpx;
  box-shadow: 0 0 0 2rpx #88888a inset;
  border-radius: 44rpx;
}
.refund-list-page .pay-btn,
.refund-list-page .confirm-btn {
  box-shadow: none;
  background-color: #ff8b39;
}
.refund-list-page .empty-content {
  margin-top: 200rpx;
}
