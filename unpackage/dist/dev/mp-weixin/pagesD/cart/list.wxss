.cart-list-page {
  min-height: 100vh;
  background-color: #f4f6f9;
  padding-bottom: 188rpx;
}
.cart-list-page .position-container {
  padding: 20rpx 24rpx 32rpx 24rpx;
}
.cart-list-page .checkbox {
  flex: none;
}
.cart-list-page .product-container {
  margin: 32rpx 32rpx env(safe-area-inset-bottom) 32rpx;
  background-color: #fff;
  padding: 24rpx;
  border-radius: 24rpx;
}
.cart-list-page .product-image {
  flex: none;
  border-radius: 8rpx;
}
.cart-list-page .product-name {
  width: 374rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.cart-list-page .plus-btn,
.cart-list-page .minus-btn {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #30a375;
}
.cart-list-page .plus-btn:before {
  position: absolute;
  content: "";
  width: 4rpx;
  height: 20rpx;
  border-radius: 4rpx;
  background-color: #fff;
}
.cart-list-page .minus-btn::after,
.cart-list-page .plus-btn::after {
  content: "";
  width: 20rpx;
  height: 4rpx;
  border-radius: 4rpx;
  background-color: #fff;
}
.cart-list-page .plus-btn.disabled {
  background-color: #e0e6f1;
}
.cart-list-page .minus-btn.disabled {
  background-color: #ff4f4f;
}
.cart-list-page .tabbar-container {
  position: fixed;
  bottom: 0;
  padding: 16rpx 24rpx calc(16rpx + env(safe-area-inset-bottom)) 24rpx;
  width: 100%;
  background-color: #fff;
}
.cart-list-page .settle-btn {
  width: 198rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
.cart-list-page .empty-content {
  margin: auto;
  height: 70vh;
}
