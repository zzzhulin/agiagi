.logistics-page {
  min-height: 100vh;
  padding: 48rpx 32rpx env(safe-area-inset-bottom) 32rpx;
}
.logistics-page .tracking-list {
  margin-top: 48rpx;
}
.logistics-page .tracking-item {
  position: relative;
  padding-left: 64rpx;
  padding-bottom: 32rpx;
}
.logistics-page .tracking-item:before {
  content: "";
  position: absolute;
  top: 30rpx;
  left: 28rpx;
  width: 2rpx;
  height: 100%;
  background-color: #e0e6f1;
  z-index: 1;
}
.logistics-page .tracking-item:last-child {
  padding-bottom: 0;
}
.logistics-page .tracking-item:last-child:before {
  display: none;
}
.logistics-page .tracking-item:first-child .tracking-title:before {
  box-shadow: none;
  background-color: #30a375;
}
.logistics-page .tracking-title {
  position: relative;
}
.logistics-page .tracking-title:before {
  position: absolute;
  left: -45rpx;
  content: "";
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 0 0 0 2rpx #cfcfcf inset;
  z-index: 2;
}
.logistics-page .empty-content {
  margin-top: 200rpx;
}
