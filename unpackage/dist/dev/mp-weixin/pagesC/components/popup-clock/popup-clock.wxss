.clock-popup {
  height: 738rpx;
  padding: 48rpx 32rpx 0 32rpx;
}
.clock-popup textarea {
  width: 100%;
  height: 160rpx;
  font-size: 32rpx;
  line-height: 44rpx;
}
.clock-popup .placeholder {
  font-size: 32rpx;
  line-height: 44rpx;
}
.clock-popup .speech-btn {
  width: 72rpx;
  height: 72rpx;
  margin-left: auto;
  border-radius: 50%;
  background-color: #30a375;
}
.clock-popup .image-list {
  position: relative;
  padding-top: 32rpx;
  flex-wrap: wrap;
}
.clock-popup .image-list:before {
  content: "";
  position: absolute;
  top: 0;
  width: 100%;
  height: 2rpx;
  background-color: #e0e6f1;
}
.clock-popup .upload-btn,
.clock-popup .image-item {
  width: 212rpx;
  height: 212rpx;
  box-shadow: 0 0 0 2rpx #e0e6f1 inset;
  border-radius: 16rpx;
}
.clock-popup .image-item {
  position: relative;
  overflow: hidden;
}
.clock-popup .delete-btn {
  position: absolute;
  right: 0;
  bottom: 0;
}
.clock-popup .confirm-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  margin: 0 auto;
  background-color: #30a375;
  display: flex;
  justify-content: center;
  align-items: center;
}
