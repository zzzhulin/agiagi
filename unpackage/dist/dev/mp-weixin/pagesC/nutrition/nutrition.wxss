.nutrition-page {
  min-height: 100vh;
  padding-top: 670rpx;
  background-color: #f4f6f9;
}
.nutrition-page .background {
  position: absolute;
  top: 0;
}
.nutrition-page .nutrition-container {
  position: relative;
  margin: 0 32rpx 76rpx 32rpx;
  padding: 48rpx 32rpx;
  border-radius: 24rpx;
  background-color: #fff;
}
.nutrition-page .form-label {
  flex: none;
  width: 112rpx;
}
.nutrition-page .form-input {
  position: relative;
  flex: 1;
  height: 80rpx;
  padding: 20rpx 24rpx;
  background-color: #F9F9F9;
  border-radius: 16rpx;
}
.nutrition-page .form-input input,
.nutrition-page .form-input picker,
.nutrition-page .uni-input {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}
.nutrition-page .form-input .icon {
  position: absolute;
  right: 24rpx;
  top: 0;
  bottom: 0;
  width: 48rpx;
  height: 48rpx;
  margin: auto;
}
.nutrition-page .tabbar-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 32rpx env(safe-area-inset-bottom) 32rpx;
  background-color: #fff;
}
.nutrition-page .survey-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
