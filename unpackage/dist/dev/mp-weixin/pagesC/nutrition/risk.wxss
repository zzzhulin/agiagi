.nutrition-risk-page {
  padding: 32rpx 32rpx env(safe-area-inset-bottom) 32rpx;
}
.nutrition-risk-page .risk-container {
  padding: 32rpx 24rpx;
  border-radius: 24rpx;
  background-color: #F9F9F9;
}
.nutrition-risk-page .risk-item .text {
  display: inline;
}
.nutrition-risk-page .description {
  position: relative;
  width: 100%;
  height: 272rpx;
  padding: 24rpx 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 0 0 2rpx #e0e6f1 inset;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #111112;
}
.nutrition-risk-page .speech-btn {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #f4f6f9;
  z-index: 9;
}
.nutrition-risk-page .confirm-btn {
  width: 100%;
  height: 88rpx;
  background-color: #30a375;
  border-radius: 44rpx;
  margin-top: 64rpx;
}
