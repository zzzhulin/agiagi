.clock-calendar-page {
  min-height: 100vh;
  padding: 32rpx 32rpx 124rpx 32rpx;
  background-color: #f4f6f9;
}
.clock-calendar-page .clock-item {
  position: relative;
  padding-left: 48rpx;
}
.clock-calendar-page .clock-item:before {
  content: "";
  position: absolute;
  top: 32rpx;
  left: 12rpx;
  width: 2rpx;
  height: calc(100% + 68rpx);
  background-color: #e0e6f1;
}
.clock-calendar-page .clock-day {
  position: relative;
  height: 72rpx;
}
.clock-calendar-page .clock-day:before {
  content: "";
  position: absolute;
  left: -48rpx;
  top: 0;
  bottom: 0;
  width: 24rpx;
  height: 24rpx;
  margin: auto;
  border-radius: 50%;
  background-color: #4ef08c;
  box-shadow: 0 0 0 4rpx #E3FFEE inset;
}
.clock-calendar-page .clock-container {
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.clock-calendar-page .clock-content {
  position: relative;
  padding-top: 24rpx;
}
.clock-calendar-page .clock-content:before {
  content: "";
  position: absolute;
  top: 0;
  width: 100%;
  height: 2rpx;
  background-color: #e0e6f1;
}
.clock-calendar-page .clock-images {
  flex-wrap: wrap;
}
.clock-calendar-page .clock-image {
  box-shadow: 0 0 0 2rpx #e0e6f1 inset;
  border-radius: 16rpx;
  overflow: hidden;
}
.clock-calendar-page .clock-btn {
  width: 142rpx;
  height: 48rpx;
  border-radius: 28rpx;
  box-shadow: 0 0 0 2rpx #30a375 inset;
}
