.clock-finish-page {
  min-height: 100vh;
  padding: 64rpx 32rpx 172rpx 32rpx;
}
.clock-finish-page .clock-score {
  width: 100%;
  padding-bottom: 32rpx;
  border-radius: 24rpx;
  background-color: #F9F9F9;
  overflow: hidden;
}
.clock-finish-page .table {
  position: relative;
  padding-bottom: 32rpx;
}
.clock-finish-page .table::after {
  content: "";
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  bottom: 0;
  height: 2rpx;
  background-color: #e0e6f1;
}
.clock-finish-page .table-header {
  padding: 24rpx 32rpx;
  height: 92rpx;
  background-color: #E3FFEE;
}
.clock-finish-page .table-row {
  height: 56rpx;
  padding: 8rpx 32rpx;
}
.clock-finish-page .clock-comparison {
  padding: 0 32rpx;
}
.clock-finish-page .image-list {
  flex-wrap: wrap;
}
.clock-finish-page .tabbar-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 32rpx env(safe-area-inset-bottom) 32rpx;
  background-color: #fff;
}
.clock-finish-page .start-btn,
.clock-finish-page .back-btn {
  width: 330rpx;
  height: 88rpx;
  border-radius: 44rpx;
}
.clock-finish-page .start-btn {
  box-shadow: 0 0 0 2rpx #30a375 inset;
}
.clock-finish-page .back-btn {
  background-color: #30a375;
}
.select-days-popup {
  width: 100%;
  height: 556rpx;
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
}
.select-days-popup .select-title {
  height: 80rpx;
  padding-right: 32rpx;
  align-items: center;
}
.select-days-popup .scroll-area {
  height: 288rpx;
  position: relative;
  overflow: hidden;
}
.select-days-popup .scroll-mask {
  position: absolute;
  top: 0;
  left: 32rpx;
  width: 686rpx;
  height: 96rpx;
  border-top: 2rpx solid #f4f6f9;
  border-bottom: 2rpx solid #f4f6f9;
}
.select-days-popup .scroll-content {
  position: absolute;
  width: 100%;
}
.select-days-popup .day-item {
  height: 96rpx;
  text-align: center;
  line-height: 96rpx;
  font-size: 32rpx;
  color: #88888a;
  transition: all 0.2s;
}
.select-days-popup .day-item.current {
  font-size: 36rpx;
  color: #111112;
  font-weight: 600;
}
.select-days-popup .start-btn {
  margin: 32rpx 32rpx 0 32rpx;
  width: auto;
  background-color: #30a375;
}
.weight-popup {
  width: 588rpx;
  height: 380rpx;
  padding: 40rpx;
  border-radius: 32rpx;
  background-color: #fff;
}
.weight-popup .weight-input-content {
  padding-right: 26rpx;
  height: 96rpx;
  box-shadow: 0 0 0 2rpx #88888a inset;
  border-radius: 16rpx;
}
.weight-popup .weight-input {
  padding: 0 32rpx;
  flex: 1;
}
.weight-popup .cancel-btn,
.weight-popup .confirm-btn {
  width: 240rpx;
  height: 88rpx;
  border-radius: 44rpx;
}
.weight-popup .cancel-btn {
  background-color: #f4f6f9;
}
.weight-popup .confirm-btn {
  background-color: #30a375;
}
