.clock-page {
  min-height: 100vh;
  padding: 48rpx 32rpx env(safe-area-inset-bottom) 32rpx;
  background-color: #f4f6f9;
}
.clock-page .task-list {
  padding: 0 0 0 16rpx;
}
.clock-page .task-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #fff;
}
.clock-page .task-item.active {
  box-shadow: 0 0 0 2rpx #30a375 inset;
}
.clock-page .checkbox {
  margin-top: -20rpx;
}
.clock-page .alert-btn {
  margin-left: auto;
}
.clock-page .task-content {
  padding: 32rpx;
  background: linear-gradient(180deg, #f6fff8 0%, #ffffff 100%);
  border-radius: 24rpx;
  box-shadow: 0 0 0 4rpx #fff inset;
}
.clock-page .clock-btn {
  width: 320rpx;
  height: 72rpx;
  border-radius: 80rpx;
  margin: 0 auto;
  background-color: #30a375;
}
.clock-page .advice-content,
.clock-page .log-content {
  padding: 32rpx;
  border-radius: 24rpx;
  background-color: #fff;
}
.clock-page .record-list {
  box-shadow: 0 0 0 2rpx #f4f6f9 inset;
  border-radius: 16rpx;
  overflow: hidden;
}
.clock-page .record-item {
  height: 56rpx;
  padding: 0 16rpx;
}
.clock-page .record-item:first-child {
  height: 72rpx;
  background-color: #f4f6f9;
}
.clock-page .clock-content {
  position: relative;
  padding-top: 40rpx;
}
.clock-page .clock-content:before {
  content: "";
  position: absolute;
  top: 0;
  width: 100%;
  height: 2rpx;
  background-color: #e0e6f1;
}
.clock-page .clock-images {
  flex-wrap: wrap;
}
.clock-page .clock-image {
  box-shadow: 0 0 0 2rpx #e0e6f1 inset;
  border-radius: 16rpx;
  overflow: hidden;
}
