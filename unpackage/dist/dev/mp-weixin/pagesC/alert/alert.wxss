.alert-page {
  min-height: 100vh;
  padding: 24rpx 32rpx 396rpx 32rpx;
  background-color: #f4f6f9;
}
.alert-page .text-container {
  margin-bottom: 28rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  background-color: #fff;
}
.alert-page .form-container {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
}
.alert-page .form-content {
  position: relative;
  width: 480rpx;
  min-height: auto;
  height: auto;
  padding: 20rpx 16rpx 20rpx 24rpx;
  border-radius: 16rpx;
  background-color: #F9F9F9;
  font-size: 28rpx;
  line-height: 40rpx;
}
.alert-page .form-content .icon {
  position: absolute;
  top: 20rpx;
  right: 16rpx;
}
.alert-page .form-input {
  flex: 1;
  min-height: auto;
  height: auto;
  font-size: 28rpx;
  line-height: 40rpx;
}
.alert-page .add-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  box-shadow: 0 0 0 2rpx #30a375 inset;
}
.alert-page .tabbar-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx 32rpx env(safe-area-inset-bottom) 32rpx;
  background-color: #fff;
}
.alert-page .tabbar-container:before {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  content: "";
  height: 2rpx;
  background-color: #e0e6f1;
}
.alert-page .speech-text {
  line-height: 56rpx;
}
.alert-page .speech-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
