.tongue-diagnosis-page {
  min-height: 100vh;
  padding: 32rpx 32rpx 200rpx 32rpx;
  background-color: #fff;
}
.tongue-diagnosis-page .upload-face,
.tongue-diagnosis-page .upload-tongue {
  position: relative;
  background-color: #F9F9F9;
  border-radius: 22rpx;
  border: 2rpx dashed #88888a;
  overflow: hidden;
}
.tongue-diagnosis-page .upload-face,
.tongue-diagnosis-page .falce-image {
  width: 390rpx;
  height: 560rpx;
}
.tongue-diagnosis-page .upload-tongue,
.tongue-diagnosis-page .tongue-image {
  width: 264rpx;
  height: 264rpx;
}
.tongue-diagnosis-page .icon-delete {
  position: absolute;
  right: 8rpx;
  bottom: 8rpx;
}
.tongue-diagnosis-page .description {
  position: relative;
  width: 100%;
  height: 272rpx;
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 0 0 2rpx #e0e6f1 inset;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #111112;
}
.tongue-diagnosis-page .speech-btn {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #f4f6f9;
  z-index: 9;
}
.tongue-diagnosis-page .tabbar-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 32rpx env(safe-area-inset-bottom) 32rpx;
  background-color: #fff;
  z-index: 10;
}
.tongue-diagnosis-page .analysis-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
.tongue-diagnosis-page .family-list {
  display: flex;
  width: auto;
  height: 264rpx;
}
.tongue-diagnosis-page .family-item {
  flex: none;
  width: 212rpx;
  height: 264rpx;
  margin-right: 24rpx;
  background-color: #F9F9F9;
  border-radius: 24rpx;
}
.tongue-diagnosis-page .family-item:last-child {
  margin-right: 0;
}
.tongue-diagnosis-page .family-item.active {
  box-shadow: 0 0 0 4rpx #30a375 inset;
}
