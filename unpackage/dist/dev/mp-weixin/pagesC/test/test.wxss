.test-page {
  min-height: 100vh;
  padding-top: 656rpx;
  background-color: #f4f6f9;
  padding-bottom: env(safe-area-inset-bottom);
}
.test-page .background {
  position: absolute;
  top: 0;
}
.test-page .description {
  position: relative;
  height: 272rpx;
  padding: 24rpx 32rpx;
  margin: 0 32rpx;
  border-radius: 24rpx;
  background-color: #ffffff;
  box-shadow: 0 0 0 2rpx #e0e6f1 inset;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #111112;
}
.test-page .speech-btn {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #f4f6f9;
  z-index: 9;
}
.test-page .test-btn {
  height: 88rpx;
  margin: 48rpx 32rpx 64rpx 32rpx;
  background-color: #30a375;
  border-radius: 44rpx;
  margin-top: 64rpx;
}
.test-page .history-container {
  margin: 0 32rpx;
}
.test-page .history-container .title {
  padding: 0 32rpx;
}
.test-page .history-container .title:before, .test-page .history-container .title::after {
  content: "";
  width: 220rpx;
  height: 2rpx;
  background-color: #e0e6f1;
}
.test-page .test-item {
  padding: 34rpx 32rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
}
.test-page .again-btn {
  width: 144rpx;
  height: 56rpx;
  border-radius: 28rpx;
  background-color: #E3FFEE;
}
