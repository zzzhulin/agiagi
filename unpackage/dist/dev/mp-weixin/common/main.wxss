text,
input,
textarea,
view {
  box-sizing: border-box;
}
input,
textarea {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  padding: 0;
  background-color: transparent;
  color: #111112;
}
textarea {
  height: auto;
  min-height: 44rpx;
}
.md-p {
  font-size: 32rpx;
  line-height: 44rpx;
  -webkit-margin-before: 0 !important;
  margin-block-start: 0 !important;
  -webkit-margin-after: 0 !important;
  margin-block-end: 0 !important;
}
._block text {
  display: none !important;
}
.placeholder {
  font-size: 28rpx;
  color: #99999b;
}
.assistant-btn {
  flex: none;
  height: 48rpx;
  padding: 0 16rpx;
  box-shadow: 0 0 0 2rpx #e2e2e2 inset;
  border-radius: 28rpx;
  background-color: #F9F9F9;
}
.assistant-icon {
  width: 32rpx;
  height: 32rpx;
}
.full-width {
  width: 100%;
}
