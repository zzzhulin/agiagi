.tabbar-container {
  width: 100%;
  padding: 16rpx 32rpx 0 32rpx;
  background-color: inherit;
}
.tabbar-container .tabbar-content {
  position: relative;
  padding: 20rpx 24rpx;
  background: #ffffff;
  border-radius: 48rpx;
  box-shadow: 0rpx 0rpx 0rpx 2rpx #f4f6f9 inset;
}
.tabbar-container .tabbar-content.empty {
  height: 88rpx;
}
.tabbar-container .tabbar-content::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 48rpx;
  box-shadow: 0rpx 4rpx 20rpx 0rpx #0000000d;
  z-index: -1;
}
.tabbar-container .tabbar-input {
  flex: 1;
  width: auto;
  min-height: 44rpx;
  margin: 2rpx 32rpx 2rpx 16rpx;
  line-height: 44rpx;
  font-size: 32rpx;
}
.tabbar-container .send-btn {
  position: absolute;
  bottom: 12rpx;
  right: 24rpx;
  width: 120rpx;
  height: 60rpx;
  background-color: #30a375;
  border-radius: 48rpx;
  z-index: 99;
}
.tabbar-container .flexbox-end {
  padding-right: 128rpx;
}
.tabbar-container .tabbar-icon {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  z-index: 99;
}
.tabbar-container .action-content {
  flex-wrap: wrap;
  row-gap: 16rpx;
  -webkit-column-gap: 48rpx;
          column-gap: 48rpx;
  padding: 0 31rpx;
}
.tabbar-container .action-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
}
.tabbar-container .action-icon {
  width: 48rpx;
  height: 48rpx;
}
