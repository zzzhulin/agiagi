.user-page .background {
  position: absolute;
}
.user-page .user-container {
  position: relative;
  padding: 196rpx 0 48rpx 30rpx;
}
.user-page .count-container {
  position: relative;
  margin: 0 56rpx;
}
.user-page .order-container {
  position: relative;
  padding: 28rpx 16rpx;
  margin: 48rpx 32rpx;
  background-color: #fff;
  box-shadow: 0rpx 8rpx 8rpx 0rpx #0000000d;
  border-radius: 24rpx;
}
.user-page .order-total {
  height: 88rpx;
}
.user-page .order-icon {
  position: relative;
}
.user-page .order-count {
  position: absolute;
  right: -8rpx;
  top: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: #ff4f4f;
  border-radius: 50%;
}
.user-page .menu-container {
  margin: 0 48rpx;
}
.user-page .menu-item {
  position: relative;
  height: 112rpx;
}
.user-page .menu-item::after {
  position: absolute;
  right: 0;
  bottom: 0;
  content: "";
  width: 100%;
  height: 2rpx;
  background-color: #f4f6f9;
}
.user-page .logout-btn {
  margin: 48rpx 32rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #30a375;
}
